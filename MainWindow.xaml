<Window x:Class="szyfrDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szyfrDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="CadetBlue">
        <Label Content="Podaj wartość klucza:" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Foreground="AntiqueWhite"/>
        <TextBox x:Name="DlugoscKlucza" HorizontalAlignment="Left" Margin="68,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" Height="32"/>
        <Label Content="Podaj tekst" HorizontalAlignment="Left" Margin="51,195,0,0" VerticalAlignment="Top" Foreground="AntiqueWhite" RenderTransformOrigin="0.341,0.541"/>
        <TextBox x:Name="hasloTextBox" HorizontalAlignment="Left" Margin="12,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" RenderTransformOrigin="0.5,0.5" Height="157">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.843"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="zaszyfrujButton" Content="Zaszyfruj" HorizontalAlignment="Left" Margin="343,353,0,0" VerticalAlignment="Top" Background="LightBlue" Click="zaszyfrujButton_Click"/>
        <Label Content="Teskt zaszyfrowany" HorizontalAlignment="Left" Margin="557,76,0,0" VerticalAlignment="Top" Foreground="AntiqueWhite"/>
        <Label x:Name="hasloLabel" Content="Label" HorizontalAlignment="Left" Margin="505,134,0,0" VerticalAlignment="Top" Height="246" Width="242" RenderTransformOrigin="0.5,0.5" Foreground="AliceBlue" BorderBrush="AntiqueWhite">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.148"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
